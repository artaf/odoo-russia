<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="product_category_form_view_eshop_dsk" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Categories">
                    <field name="name"/>
                    <field name="parent_id"/>
                </form>
            </field>
        </record>

        <record id="product_normal_form_view_eshop_dsk" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <separator string="Name" colspan="4"/>
                    <field name="name"/>

                    <notebook colspan="4">
                        <page string="Information">
                            <group colspan="2" col="2" groups="base.group_extended">
                                <separator string="Weights" colspan="2"/>
                                <field digits="(14, 3)" name="volume"/>
                                <field name="weight_net"/>
                            </group>
                            <group colspan="2" col="2" name="status" groups="base.group_extended">
                                <separator string="Status" colspan="2"/>
                                <field name="categ_id" context="{'form_view_ref': 'eshop_base_dsk.product_category_form_view_eshop_dsk'}"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="product_product_tree_view_eshop_dsk" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Products">
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="categ_id"/>
                    <field name="variants" groups="product.group_product_variant"/>
                    <field name="uom_id" string="UoM"/>
                    <field name="type"/>
                    <field name="state" groups="base.group_extended"/>
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="product_eshop_dsk_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_filter_to_sell":1, 'form_view_ref': 'eshop_base_dsk.product_normal_form_view_eshop_dsk'}</field>
            <field name="view_id" ref="product_product_tree_view_eshop_dsk"/>
            <field name="search_view_id" ref="product.product_search_form_view"/>
        </record>

        <menuitem groups="eshop_base_dsk.group_eshop_manager" id="eshop_base_dsk.menu" name="E-shop"
                sequence="100"/>
        <menuitem groups="eshop_base_dsk.group_eshop_manager" id="eshop_base_dsk.submenu" name="E-shop"
                parent="eshop_base_dsk.menu"/>
        <menuitem action="product_eshop_dsk_action" groups="eshop_base_dsk.group_eshop_manager"
                  id="eshop_base_dsk.products" name="Products" parent="eshop_base_dsk.submenu"/>
    </data>
</openerp>