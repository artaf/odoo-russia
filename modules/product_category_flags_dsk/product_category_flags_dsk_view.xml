<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="product_category_form_view_with_flags" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="eshop_base_dsk.product_category_form_view_eshop_dsk" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="vip"/>
                </field>
            </field>
        </record>

        <record id="product_eshop_dsk_category_action" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.category</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_type">form</field>
            <field name="context">{
                'form_view_ref': 'product_category_flags.product_category_form_view_with_flags',
            }</field>
            <field name="view_id" ref="product.product_category_list_view"/>
        </record>

        <menuitem action="product_eshop_dsk_category_action" groups="eshop_base_dsk.group_eshop_manager"
                  id="eshop_base_dsk.categorylist" name="Categories" parent="eshop_base_dsk.settings" sequence="1"/>

    </data>
</openerp>