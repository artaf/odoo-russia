<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="product_form_view_eshop_dsk_supplier" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product_manufacturer_dsk.product_form_view_eshop_dsk_manufacturer" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Manufacturers']" position="replace">
                    <page string="Suppliers and Manufacturers">
                        <separator string="Suppliers" colspan="4"/>
                        <field colspan="4" name="seller_ids" nolabel="1"
                               context="{'form_view_ref': 'product_supplier_form_view_eshop_dsk', 'default_min_qty': 0.0}"/>

                        <separator string="Manufacturers" colspan="4"/>
                        <field colspan="4" name="manufacturer_ids" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_supplier_form_view_eshop_dsk" model="ir.ui.view">
            <field name="name">product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="priority" eval="100"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Supplier">
                    <field name="name" context="{'form_view_ref': 'eshop_base_dsk.res_partner_form_view_eshop_dsk', 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}" options='{"quick_create": false}'/>
                    <field name="product_code" groups="base.group_extended"/>
                    <field name="min_qty" invisible="1"/>
                </form>
            </field>
        </record>

    </data>
</openerp>