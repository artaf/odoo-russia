<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_partner_form_dsk" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Accounting']/group[1]" position="before">
                    <group col="2" colspan="4">
                        <separator string="Accounting details" colspan="2"/>
                        <group col="2">
                            <field name="name_official"/>
                        </group>
                        <group col="4">
                            <field name="inn"/>
                            <field name="kpp"/>
                            <field name="okpo"/>
                        </group>
                    </group>
                </xpath>

                <page string="Sales &amp; Purchases" position="inside">
                    <group colspan="2" col="2">
                        <separator string="Login and password" colspan="2"/>
                        <field name="login"/>
                        <newline/>
                        <field name="password"/>
                    </group>
                </page>

                <field name="website" position="before">
                    <field name="region"/>
                </field>

                <page string="General" position="inside">
                    <group>
                        <separator colspan="4" string="Business types"/>
                        <field colspan="4" name="business_type_ids" nolabel="1"/>
                    </group>

                </page>
            </field>
        </record>

    </data>
</openerp>