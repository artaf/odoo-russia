<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="product_form_view_with_attribute_dsk" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[contains(@string,'Suppliers')]" position="after">
                    <page string="Attributes">
                        <separator string="Attribute group" colspan="4"/>
                        <field name="attribute_group"/>

                        <separator string="Attributes and their values" colspan="4"/>
                        <field name="attribute_value_product_ids" colspan="4" nolabel="1">
                            <tree string="Attributes and their values" editable="bottom">
                                <field name="attribute_id"/>
                                <field name="attribute_value_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_attribute_group_tree_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.group.tree</field>
            <field name="model">product.attribute.group</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attribute groups">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_attribute_group_form_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.group.form</field>
            <field name="model">product.attribute.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attribute group">
                    <separator string="Attribute group" colspan="4"/>
                    <field name="name"/>

                    <separator string="Attributes" colspan="4"/>
                    <field colspan="4" name="attribute_ids" nolabel="1"/>
                </form>
            </field>
        </record>

        <record id="product_attribute_tree_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.tree</field>
            <field name="model">product.attribute</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attributes">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_attribute_form_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.form</field>
            <field name="model">product.attribute</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attribute">
                    <separator string="Attribute" colspan="4"/>
                    <field name="name"/>

                    <separator string="Attribute groups" colspan="4"/>
                    <field colspan="4" name="attribute_group_ids" nolabel="1"/>

                    <separator string="Attribute values" colspan="4"/>
                    <field colspan="4" name="attribute_value_ids" nolabel="1">
                        <tree string="Attribute values" editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="product_attribute_value_tree_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.value.tree</field>
            <field name="model">product.attribute.value</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attribute values">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_attribute_value_form_view_dsk" model="ir.ui.view">
            <field name="name">product.attribute.value.form</field>
            <field name="model">product.attribute.value</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attribute value">
                    <field name="name"/>
                </form>
            </field>
        </record>

        <menuitem groups="base.group_extended" id="prod_groups_and_attributes" name="Product Attributes" parent="product.prod_config_main"/>

        <record id="product_attribute_group_action_dsk" model="ir.actions.act_window">
            <field name="name">Product attribute groups</field>
            <field name="res_model">product.attribute.group</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="product_attribute_group_action_dsk" groups="base.group_extended" id="prod_groups" name="Product Attribute Groups" parent="product_attribute_dsk.prod_groups_and_attributes"/>

        <record id="product_attribute_action_dsk" model="ir.actions.act_window">
            <field name="name">Product attributes</field>
            <field name="res_model">product.attribute</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="product_attribute_action_dsk" groups="base.group_extended" id="prod_attributes" name="Product Attributes" parent="product_attribute_dsk.prod_groups_and_attributes"/>


    </data>
</openerp>